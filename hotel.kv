<CustButton@Button>:
    font_size: 32

<RetiraSenhaLayout>:
    id: atendente
    display: suaSenha
    rows: 5
    padding: 10
    spacing: 10

    BoxLayout:
        spacing: 10
        CustButton:
            text: "Senha"
            on_release: atendente.novaSenha(suaSenha.text, False)
        CustButton:
            text: "Senha preferencial"
            on_release: atendente.novaSenha(suaSenha.text, True)
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Sua senha eh:'
            font_size: 30
        Label:
            id: suaSenha
            text: '0'
            font_size: 30

<Gerenciador>:
    LoginLayout:


<LoginLayout>:
    BoxLayout:
        id: login
        padding: 200


        BoxLayout:
            spacing: 10
            orientation: 'vertical'


            BoxLayout:
                size_hint_y: None
                height: 30
                Label:
                    text: 'Login:'
                TextInput:
                    id: loginText
                    font_size: 16
                    multiline: False

            BoxLayout:
                size_hint_y: None
                height: 30
                Label:
                    text: 'Senha:'
                TextInput:
                    id: passwordText
                    multiline: False
                    password: True

            Button:
                id: enterLogin
                size_hint_y: None
                height: 60
                font_size: 16
                text: 'Entrar'
